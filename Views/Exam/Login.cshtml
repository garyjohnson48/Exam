
@namespace Exam.Models
@model Login_User


<div class="row mt-5">
    <div class="col-4"> <a href="/">Back</a></div>
        <div class="col-4 card">
            <div class="card-header m-0">
                <h1>Login</h1>
            </div>

            <div class="card-body">

                <form action="/Process_Login" method="post">
                    <div class="form-group d-flex justify-content-end">
                        <label asp-for="Email" class="mr-4"></label>
                        <input asp-for="Email" class="form-control">
                        <span asp-validation-for="Email" class="bg-danger"></span>
                    </div>
                    <div class="form-group d-flex justify-content-end">
                        <label asp-for="Password" class="mr-4"></label>
                        <input asp-for="Password" class="form-control">
                        <span asp-validation-for="Password" class="bg-danger"></span>
                    </div>
                    <div class="d-flex justify-content-end">
                        <input type="submit" class="btn btn-primary"value="Login">
                    </div>
                    

                </form>
            </div>
        </div>
</div>
    